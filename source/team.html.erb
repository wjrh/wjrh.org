	<div class="twelve columns">
		<%= tag :img, :src =>  "https://i.imgur.com/qBq19E0.jpg"%>
	</div>
</div>
<div class="row">
	<div class="eight columns offset-by-two columns">
		<h1>Our Leadership Team</h1>
	</div>
