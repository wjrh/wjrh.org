</div>

<% data.staff.board2020.shuffle.each_slice(4) do |member_group| %>
	<div class="row">
		<% member_group.each do |member| %>
			<div class="three columns">
		  		<strong><%= member.name %> '<%= member.year %></strong><br>
		  		<%= member.role %>
				<%= member.email %>
		  	</div>
	  	<% end %>
  	</div>
<% end %>
